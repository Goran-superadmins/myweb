
pipeline{
    agent any
    
    environment{
        PATH = "/usr/bin/mvn:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'GITHUB_CRED', url: 'https://github.com/Goran-superadmins/cicd-pipeline-train-schedule-gradle.git'
            }
        }
        stage("Mvn Build"){
            steps{
                sh "mvn clean packages"
            }
        }
    }
}
